{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noThenProperty": "off",
        "noEmptyInterface": "off"
      },
      "complexity": {
        "noBannedTypes": "off"
      },
      "correctness": {
        "useYield": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "nursery": {
        "noExcessiveLinesPerFile": {
          "level": "error",
          "options": {
            "maxLines": 300,
            "skipBlankLines": false
          }
        }
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "includes": ["packages/*/src/**/*.ts", "packages/*/tests/**/*.ts"]
  }
}
