{
  "name": "@mvfm/plugin-zod",
  "version": "0.0.1",
  "description": "Zod validation DSL plugin for mvfm",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
