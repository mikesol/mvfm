  },
  "files": ["dist"],
  "peerDependencies": {
    "@mvfm/core": "workspace:*",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@mvfm/core": "workspace:*",
    "zod": "^4.0.0"
  }
}
