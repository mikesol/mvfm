{
  "name": "@mvfm/plugin-slack",
  "version": "0.0.1",
  "description": "Slack plugin for mvfm",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check": "biome check --error-on-warnings src tests && tsc -p tsconfig.json && api-extractor run --local",
    "test": "vitest run",
    "size": "size-limit"
  },
  "files": [
    "dist",
    "etc"
  ],
  "peerDependencies": {
    "@mvfm/core": "workspace:*"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@mvfm/core": "workspace:*",
    "@slack/web-api": "^7.14.1",
    "fast-check": "^4.5.3"
  }
}
