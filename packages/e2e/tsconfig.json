{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@mvfm/core": ["../core/dist"],
      "@mvfm/plugin-openai": ["../plugin-openai/dist"],
      "@mvfm/plugin-postgres": ["../plugin-postgres/dist"],
      "@mvfm/plugin-stripe": ["../plugin-stripe/dist"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
