---
import Base from "../layouts/Base.astro";
import { getAllExamples } from "../examples";

const kinds = Object.keys(getAllExamples()).sort();
---

<Base>
  <div class="pt-16 text-lg leading-loose flex flex-wrap">
    {kinds.map((kind) => (
      <a href={`/${kind}`} class="text-base-500 hover:text-base-50 transition-colors mr-4">{kind}</a>
    ))}
  </div>
</Base>
