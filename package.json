{
  "name": "ilo",
  "version": "0.0.1",
  "description": "Extensible tagless final DSL for deterministic, verifiable programs in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "check": "biome check .",
    "format": "biome check --write .",
    "test": "vitest run",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,json}": "biome check --write --no-errors-on-unmatched"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@testcontainers/postgresql": "^11.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postgres": "^3.4.8",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
